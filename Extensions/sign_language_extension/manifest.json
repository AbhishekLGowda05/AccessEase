{
  "manifest_version": 3,
  "name": "Sign Language Video Subtitles",
  "version": "1.0",
  "description": "Upload a video and display synchronized subtitles.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
